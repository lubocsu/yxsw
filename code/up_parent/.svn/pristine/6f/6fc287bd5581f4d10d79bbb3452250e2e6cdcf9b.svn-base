.count-image {
	width: 60%;
	overflow: hidden;
	float: left;
	height: 100%;
}
.proportion-image{
	width: 50%;
	float: left;
	min-height: 150px;
	padding: 10px 20px;
	box-sizing: border-box;
}

.count-table-cell{
    float: left;
   width: 150px;
    height:200px;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -180px;
    margin-top: -110px;
}
.count-table-cell:before{
    content: "";
    position: absolute;
    top: 0;
    left: 25%;
    width: 1px;
    height: 35%;
    margin-left: 49px;
    background: rgb(51, 153, 153);
}
.count-table-cell .radius {
    position: absolute;
    left: 25%;
    vertical-align: middle;
    width: 100px;
    height: 100px;
    border-radius: 50px;
    background: #fff;
    top: 35%;
}
.radius.all-hours{
    border: 1px solid #69c;
}
 .radius .title {
    background: none;
    text-align: center;
    height: 50px;
    line-height: 60px;
    color: rgb(102, 153, 204);
    text-indent: 0;
    font-family: Arial;
    font-size: 13px;
    float: left;
    width: 100%;
}
.radius .num {
    background: none;
    text-align: center;
    height: 50px;
    line-height: 16px;
    text-indent: 0;
    font-family: Arial;
    font-size: 24px;
    color: rgb(102, 153, 204);
    display: inline-block;
    line-height: 40px;
}  
 .radius.all-hours .title{
 	border-bottom:1px solid #69c;
}
.radius.over-time{
	border: 1px solid rgb(51, 153, 153);
}
 .radius.over-time .title{
 	border-bottom:1px solid rgb(51, 153, 153);
}
.radius.over-time .num, .radius.over-time .title{
    color: rgb(51, 153, 153);
} 
.zs-list{
    width: 50%;
    height: 90px;
    position: absolute;
    top: 50%;
    margin-top: -25px;
    right: 0;
}
.zs-list ul li{
	width: 100%;
	height: 30px;
	line-height: 30px;
	color:rgb(51, 153, 153) ;
	font-size:12px;
}
.hx{
    width: 80px;
    height: 1px;
    background: rgb(51, 153, 153);
    position: absolute;
